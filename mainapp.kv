#:import menu menu

MainWidget

<MainWidget>:
    orientation: 'vertical'
    menu_widget: menu_widget
    Label:
        text: root.time_label
        font_name: 'fonts/DS-DIGI.TTF'
        font_size: root.height/10
        color: 0,1,0 ,1
        pos_hint:{'right': 1.4, 'top': 1.4}
    Label:
        text: root.top_label
        font_name: 'fonts/DS-DIGI.TTF'
        font_size: root.height/6
        pos_hint:{'center_x': .5, 'center_y': .7}
        color: 0,1,0 ,1
    Label:
        text: root.middle_label
        font_name: 'fonts/DS-DIGI.TTF'
        font_size: root.height/6
        pos_hint:{'center_x': .5, 'center_y': .5}
        color: 0,1,0 ,1
    TextInput:
        id: text_input
        text: root.bottom_label
        font_name: 'fonts/DS-DIGI.TTF'
        font_size: root.height/10
        multiline: False
        halign: 'center'
        text_validate_unfocus: False
        on_text_validate: root.check_answer(), root.clear_input()
        size_hint: 1, .3
        pos_hint:{'center_x': .5, 'center_y': 0}
        background_color: 0,0,0
        foreground_color: 0,1,0

    MenuWidget:
        id: menu_widget
